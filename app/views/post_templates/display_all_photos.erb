<h1>List of photos</h1>
<form action="/create_photo_record" method="post">
  <label for="browser_input">Image</label>
  <input id="browser_input" type="text" name="image_url" placeholder="Enter a URL for the image...">
  <label for="browser_caption">Caption</label>
  <textarea id="browser_caption" name="caption" placeholder="Enter a caption for the photo..."></textarea>
  <label for="browser_user_id">Owner ID</label>
  <input id="browser_user_id" type="text" name="owner_id" placeholder="Enter an ID of a User">
  <button>Add photo</button>
</form>
<hr>
<table border="1">
  <tbody>
    <tr>
      <th>
        Image
      </th>
      <th>
        Caption
      </th>
      <th>
        Owner
      </th>
      <th>
        Posted
      </th>
      <td>
      </td>
    </tr>
    <% Photo.all.each do |post|%>
      <tr>
        <td>
          <img src="<%=post.image%>" height="300px">
        </td>
        <td>
          <%=post.caption%>
        </td>
        <td>
          <%=post.poster.username%>
        </td>
        <td>
          <%=post.created_at%>
        </td>
        <td>
          <a href="/photos/<%=post.id%>">
            Show details
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>