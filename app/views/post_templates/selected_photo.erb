<h1>Photo Details</h1>
<% if flash[:notice] %>
  <div class="success"> <%= flash[:notice] %> </div>
<% elsif flash[:fail] %>
  <div class="fail"> <%= flash[:fail] %> </div>
<% end %>
<dl>
  <dt>
    Image
  </dt>
  <dd>
    <img src="<%=@photo.image%>" height="300px">
  </dd>
  <dt>
    Caption
  </dt>
  <dd>
    <p>
      <%=@photo.caption%>
    </p>
  </dd>
  <dt>
    Owner
  </dt>
  <dd>
    <%=@photo.poster.username%>
  </dd>
  <dt>
    Posted
  </dt>
  <dd>
    <%=@photo.created_at%>
  </dd>
  <dt>
    Edit photo
  </dt>
  <dd>
    <form action="/modify_photo_record/<%=@photo.id%>" method="post">
      <label for="browser_image">Image</label>
      <input id="browser_image" type="text" name="image_url" placeholder="Enter a URL for the image..." value="<%=@photo.image%>">
      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="caption" placeholder="Enter a caption for the photo..."><%=@photo.caption%></textarea>
      <button>Update photo</button>
    </form>
  </dd>
  <dt>
    Delete photo
  </dt>
  <dd>
    <a href="/delete_photo_record/<%=@photo.id%>">
      Delete this photo
    </a>
  </dd>
</dl>
<h2>Comments</h2>
<table>
  <tbody>
    <tr>
      <th>
        Commenter
      </th>
      <th>
        Comment
      </th>
      <th>
        Posted
      </th>
    </tr>
    <%@photo.comments.each do |comment|%>
    <tr>
      <td>
        <%=comment.%>
      </td>
      <td>
        <%=%>
      </td>
      <td>
        <%=%>
      </td>
    </tr>
  </tbody>
</table>
<h3>Add a new comment</h3>
<form action="/add_comment" method="post">
  <label for="browser_photo_id">Photo ID</label>
  <input id="browser_photo_id" type="text" placeholder="Enter the photo ID" name="input_photo_id" value="861">
  <label for="browser_author_id">Author ID</label>
  <input id="browser_author_id" type="text" placeholder="Enter your author ID" name="input_author_id">
  <label for="browser_comment">Comment</label>
  <textarea id="browser_comment" type="text" placeholder="Enter a comment..." name="input_comment"></textarea>
  <button>Add comment</button>
</form>